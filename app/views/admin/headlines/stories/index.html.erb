<h2>Stories
  <%= link_to "Create", new_admin_headlines_story_path, :class => "create button add" %>
</h2>
<h3>
  <center>
    <%= link_to "Stories", admin_headlines_stories_path %>&nbsp;&nbsp;
    <%= link_to "Draft Stories", draft_admin_headlines_stories_path %>&nbsp;&nbsp;
    <%= link_to "Archived Stories", archived_admin_headlines_stories_path %>
  </center>
</h3>
<table>
  <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Summary</th>
      <th scope="col">Editor</th>
      <th scope="col">Created at</th>
      <th scope="col">Publish State</th>
      <th scope="col" style="width: 50px;">&nbsp;</th>
    </tr> 
  </thead>
  <tbody>
    <% if !@stories.blank? %>
      <% for story in @stories %>
        <tr>
          <td><%= link_to story.title, edit_admin_headlines_story_path(story), :method => :get  %></td>
          <td><%= story.summary %></td>
          <td><%= link_to story.editor.login, admin_user_edit_url(story.editor), {:class => "admin", :title => "Edit user"} -%></td>
          <td><%= fecha(story.created_at) %></td>
          <td><%= story.publish_state %><br /><%=fecha(story.publish_date) %> - <%= fecha(story.archive_date) %> </td>
          <td>
            <% form_for story, :url => admin_headlines_story_path(story), :html => {:method => :delete}  do |f| -%>
              <%= f.submit "Delete", :disable_with => 'Deleting...' %>
            <% end -%>
          </td>
        </tr>
      <% end %> 
    <% else %>
     <tr>
       <td colspan="5" class="note">Empty.</td>
     </tr>
    <% end %>
  </tbody>
<%= will_paginate %>
</table>
