<% include_javascript "fckeditor/fckeditor" %>

	
<fieldset id="main-info">
  <legend>Main info</legend>
  <label>Title <%=f.text_field :title, :size => nil -%></label>
</fieldset>

<fieldset id="meta-info">
  <legend>Meta info</legend>
  <label>Tags <%= f.text_field :tag_list, {:size => nil} %></label>
  <div class="group">
	  <label>Groups assignment
      <%= select ("story","owner_id", current_user.groups.collect {|g| [g.name, g.id]}) %>
	  </label>
	</div>
</fieldset>

<fieldset id="story-content">
  <legend>Content</legend>
  <label>Summary <%= fckeditor_textarea( "story", "summary", :height => '250') %></label>
  <label>Body <%= fckeditor_textarea( "story", "body", :height => '450') %></label>
</fieldset>
